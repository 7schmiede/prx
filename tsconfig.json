{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2017",
            "es2015",
            "dom",
            "es6"
        ],
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@common": ["src/common"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}